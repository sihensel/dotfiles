# Aliases for ZSH

# confirm before overwriting something
alias cp='cp -i'
alias mv='mv -i'

# Git
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gd='git diff'

# some aliases
alias ll='ls -hlNv --color=auto --group-directories-first'
alias la='ls -AhlNv --color=auto --group-directories-first'
alias free='free -m'
alias grep='grep --color=auto'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias vim='nvim'
alias pac='sudo pacman'
alias updatepac='sudo reflector --country France --country Germany --latest 10 --age 12 --protocol https --sort rate --save /etc/pacman.d/mirrorlist'
alias p='python3'
alias mount='sudo mount'
alias umount='sudo umount'
alias ufw='sudo ufw'
alias ack='ack -i'
alias diff='diff -y --color'
alias ncm='ncmpcpp'

alias checkgit='for i in $(ls); do echo "--$i"; cd $i; git status; cd ..; done'

# use the NAME of the VPN connection ('vpn_students' in this case)
alias connect='nmcli connection up vpn_students ifname tun0'
